.container{
  display: flex;
  flex-direction: column;
  align-items: left;
}
.head-img{
  width: 100%;
  height: 500rpx;
  overflow: inherit;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 180rpx;
  margin-left: -51rpx;
  opacity: 0.6;
}
.author-date{
  flex-direction: row;
  font-size: 24rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.avatar{
  width: 60rpx;
  height:60rpx;
  vertical-align: middle;
}
.author{
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}
.const-text{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
  vertical-align: middle;
}
.date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
  vertical-align: middle
}
.title{
  font-size: 36rpx;
  font-weight: 700;
  vertical-align: middle;
  color: #4b556c;
  letter-spacing: 2rpx;
  margin:30rpx 0 0 40rpx;
}
.tool{
  width: 100%;
  margin-top:20rpx;
}
.circle-img{
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
  position: relative;
}
.circle-img image{
  width: 90rpx;
  height: 90rpx;
}
.circle-share{
  margin-left: 30rpx;
}
.share{
  width: 86rpx;
  height: 86rpx;
  right: 0;
  border-radius: 50%;
  position: absolute;
  opacity: 0;
}
.horizon{
  position: relative;
  top: 46rpx;
  width: 660rpx;
  margin: 0 auto;
  border: 1px solid #eee;
  vertical-align: middle;
  z-index: -99;
}
.detail{
  margin: 20rpx 20rpx 0;
  color: #666;
  letter-spacing: 2rpx;
  line-height: 44rpx;
}
