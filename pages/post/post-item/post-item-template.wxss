.post-container{
  display: flex;
  flex-direction:column;
  margin-top: 20px;
  margin-bottom: 40px;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 10rpx 20rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10px;
  margin-bottom: 10px;
}
.post-image{
  margin-left: 16rpx;
  width: 100%;
  height: 340rpx;
  margin:auto 0;
  margin-bottom: 15px;
}
.post-content{
  font-size: 28rpx;
  letter-spacing:2rpx;
  line-height: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  justify-content: center;
  color: #666;
}
.post-like{
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 20rpx;
}
.post-like-image{
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-right: 8px;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}